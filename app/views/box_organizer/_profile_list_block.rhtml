<div id='edit-profile-list-block'>
  <%= labelled_form_field _('Limit of items'), text_field(:block, :limit, :size => 3) %>
  <%= check_box(:block, :prioritize_profiles_with_image) %>
  <label for="block_prioritize_profiles_with_image"><%= _('Prioritize profiles with image') %></label>

  <% if @block.type == 'MembersBlock' %>
  <div>
    <%= labelled_check_box(_("Show join leave button"), 'block[show_join_leave_button]', true, @block.show_join_leave_button) %>
  </div>
  <% end %>
</div>

